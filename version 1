nombre = input("Ingrese su nombre: ")
try:
    quetzales = float(input("¿Cuántos quetzales tiene?: "))
    tasa_dolar = float(input("Ingrese la tasa de cambio a dólares: "))

except ValueError:
    print ("se ha ingresado algun dato incorrecto, se le asigara automaticamente un valor de 0, por favor vuelva a intentar nuevamente")
    quetzales =0
    tasa_dolar=1
try:
    if tasa_dolar == 0:
        raise ValueError("La tasa de cambio no puede ser 0.")
    
    dolares = quetzales / tasa_dolar
    puede_viajar = dolares > 100

    print(f"\nHola {nombre}, tienes ${dolares:.2f} dólares.")

    if puede_viajar:
        print("¡Puedes hacer un viajesotote!")
    else:
        print("Necesitas ahorrar más para tu viaje.")

except ValueError as e:
    print(f"Error: {e}")
